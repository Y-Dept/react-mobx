{
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "import",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "rules": {
    "indent": [
      1,
      2,
      { "SwitchCase": 2 }
    ],
    "react/jsx-curly-spacing": 0,
    "react/jsx-indent-props": [ 1, 2 ],
    "react/jsx-indent": [ 1, 2 ],
    "jsx-quotes": [ 1, "prefer-single" ],
    "camelcase": [
      1,
      { "properties": "always" }
    ],
    "comma-dangle": [ 1, "never" ],
    "semi": [ 1, "always" ],
    "quotes": [ 1, "single" ],
    "strict": [ 2, "global" ]
  }
}
